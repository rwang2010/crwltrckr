= stylesheet_link_tag "http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css"
= javascript_include_tag "jquery-2.1.1.js"
%div#wrapper
	%div#page-wrapper
		%div.row.border-bottom
			%nav.navbar.navbar-static-top
				%ul.nav.navbar-top-links.navbar-right
					%li
						= link_to "Log out", "login.html.haml"
		%div.wrapper
			%div.container
				%div.row.gray-bg
					%div.col-lg-12
						%div.ibox.float-e-margins
							%div.ibox-content
								%div
									= image_tag("graph.png", height: '278', width: '750')
				%div.row.gray-bg
					%div.col-md-8
						%div.ibox.float-e-margins

						%div.ibox-title
							%h5
								Crawl Stats
						%div.ibox-content
							%div.table-responsive
								%table.table.table-striped
									%thead
										%tr
											%th
												Host
											%th
												Cached
											%th
												Days without crawl
											%th
												Last extraction date
											%th
												Regression tests
									%tbody
										%tr
											%th
												foursquare.com
											%th
												17820015
											%th
												3
											%th
												2015-07-27
											%th
												51 Passed , 6 Failed
										%tr
											%th
												tastingtable.com
											%th
												6351
											%th
												80
											%th
												2015-06-12
											%th
												20 Passed
					%div.col-md-4
						%div.row
							%div.ibox.float-e-margins
							%div.ibox-title
								%span.label.label-info.pull-right
								%h5
									Crawl activity
							%div.ibox-content
								%small.stats-label
									Leaf Pages cached today
									%h2
										4,232,910,335
							%div.ibox-content
								%small.stats-label
									Directory Pages cached today
									%h2
										9,791,181
						%div.row
							%div.ibox.float-e-margins
							%div.ibox-title
								%span.label.label-info.pull-right
								%h5
									TODO
								%div.ibox-tools
									%button
										%i.fa.fa-plus-square-o
							%div.ibox-content
								%ul.todo-list.small-list
									%li
										= check_box_tag("1", "task", checked = true)
										%div.ibox-tools
											%a.close-link
												%i.fa.fa-times
									%li
										= check_box_tag("2", "task", checked = true)
										%div.ibox-tools
											%a.close-link
												%i.fa.fa-times
									%li
										%div.input-group
											= check_box_tag("3", "task", checked = false)
											= text_field_tag("task-input", nil, size: 45, class: "todo-input")
						%div.row
							%div.ibox.float-e-margins
							%div.ibox-title
								%span.label.label-warning.pull-right
								%h5
									Limit reached notices
							%div.ibox-content
								%div.row
									%div.col-xs-4
										%small.stats-label
											Host
										%h4
											startlocal.com.au
									%div.col-xs-4
										%small.stats-label
											Limit type
										%h4
											Failed
									%div.col-xs-4
										%small.stats-label
											Limit amount
										%h4
											8000
		%form
			%label Enter a Todo and hit enter!
			%input{:type => "text"}
		%ul

:javascript 
	$('form').submit(function () {
	    if ($('input').val() !== '') {
	        var input_value = $('input').val();
	        $('ul').append('<li>' + input_value + '<a href="">x</a></li>');
	        //$('ul').append('<li>' + input_value '<a href="">x</a></li>');

	    };
	    $('input').val('');
	    return false;
	});

	$('.close-link').click(function(e) {
	    e.preventDefault();
	    console.log($(this));
	    $(this).parent().parent().remove();
	});

	$(document).on('click', 'a', function (e) {
	    e.preventDefault();
	    $(this).parent().remove();
	});