%div.ibox.float-e-margins

%div.ibox-title
  %h5
    = link_to crawl_project.name, crawl_project_path(crawl_project)
%div.ibox-content
  %div.table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th
          - stats_keys.each do |key|
            %th
              = key.gsub(/_/, ' ').titleize

      %tbody
        - crawl_project.hosts.each do |host| 
          - stats = host.stats 
          %tr
            %td
              = link_to 'x', host_path(host), method: :delete, data: { confirm: 'Are you sure?' } 
            
            - stats_keys.each do |key| 
              %td
                - if key == "name"
                  = link_to stats[key], "https://pipelines.factual.com/hosts/#{host.pipelines_id}/edit"
                - else
                  = stats[key]  

  = form_for crawl_project do |f| 
    %p
      = f.label :add_domain 
      = f.text_field :host_name 
      = f.submit
